[Unit]
Description=Gunicorn instance to serve {{cookiecutter.project_slug}}
After=network.target

[Service]
User={{cookiecutter.vmusername}}
Group=www-data
WorkingDirectory=/home/{{cookiecutter.vmusername}}/{{cookiecutter.project_slug}}
Environment="PATH=/home/{{cookiecutter.vmusername}}/{{cookiecutter.project_slug}}/dpenv/bin"
ExecStart=/home/{{cookiecutter.vmusername}}/{{cookiecutter.project_slug}}/dpenv/bin/gunicorn --workers 3 --bind unix:{{cookiecutter.project_slug}}.sock -m 007 {{cookiecutter.project_slug}}.app:app

[Install]
WantedBy=multi-user.target
